<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		TargetType="GroupBox">
		<Setter
			Property="Background"
			Value="Transparent" />
		<Setter
			Property="Foreground"
			Value="#f5f5f5" />
		<Setter
			Property="BorderBrush"
			Value="#7884ab" />
		<Setter
			Property="BorderThickness"
			Value="3" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="GroupBox">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition
								Height="Auto" />
							<RowDefinition
								Height="*" />
						</Grid.RowDefinitions>
						<Border
							BorderBrush="{TemplateBinding BorderBrush}"
							BorderThickness="{TemplateBinding BorderThickness}"
							CornerRadius="5"
							Grid.Row="1">
							<ContentPresenter
								Content="{TemplateBinding Content}"
								Margin="5" />
						</Border>
						<TextBlock
							Text="{TemplateBinding Header}"
							Foreground="{TemplateBinding Foreground}"
							Background="Transparent"
							Margin="5"
							Padding="2"
							Grid.Row="0"
							FontWeight="Bold" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>