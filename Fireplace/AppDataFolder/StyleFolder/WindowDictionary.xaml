<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		x:Key="GeneralStyleWindows"
		TargetType="Window">
		<Setter
			Property="FocusVisualStyle"
			Value="{x:Null}" />
		<Setter
			Property="WindowStyle"
			Value="None" />
		<Setter
			Property="ResizeMode"
			Value="CanMinimize" />
		<Setter
			Property="AllowsTransparency"
			Value="True" />
		<Setter
			Property="Background"
			Value="Transparent" />
		<Setter
			Property="ShowInTaskbar"
			Value="True" />
		<Setter
			Property="Topmost"
			Value="False" />
	</Style>
	<Style
		x:Key="AuthorizationRegistrationWindowStyle"
		TargetType="Window"
		BasedOn="{StaticResource GeneralStyleWindows}">
		<Setter
			Property="Height"
			Value="540" />
		<Setter
			Property="Width"
			Value="960" />
	</Style>
	<Style
		x:Key="MainWindowStyle"
		TargetType="Window"
		BasedOn="{StaticResource GeneralStyleWindows}">
		<Setter
			Property="Height"
			Value="900" />
		<Setter
			Property="Width"
			Value="1600" />
	</Style>
</ResourceDictionary>